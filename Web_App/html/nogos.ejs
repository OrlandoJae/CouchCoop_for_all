<!DOCTYPE>
<html>
<% include teilstruktur/head %>
<body>

  <!-- mittlerer Bereich (dynamisch)-->
  <div class="middlebox">
      <!-- Navbar -->
      <div id="navbarbg">
      </div>

      <div class="navbar">
          <a id="Nogonav">No-Go's</a>
          <a id="shufflenav">Shuffle</a>
          <a id="profilenav">Profil</a>
      </div>

      <div id="logo">
          <a id="home" href="/">
          <img src="bg.png" alt="What2Eat">
          </a>
      </div>


      <div id="mobil_index">
        <!-- Bereich der No-Go-Buttons -->
        <!-- UNVERTRÄGLICHKEITEN -->
        <!-- Button -->
        <button id="allergien" class="dropdown" onclick="showAllergien()">
          <a>Unverträglichkeiten</a>
        </button>

        <!-- Inhalt des Dropdowns -->
        <div id="allergien-dropdown" class="dropdown-content">
          <label class="container">
            <a>Laktoseintoleranz</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
          <label class="container">
            <a>Nussalergie</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
          <label class="container">
            <a>Glutenunverträglichkeit</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
          <label class="container">
            <a>Weitere..</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
        </div>

        <!-- ESSGEWOHNHEITEN -->
        <!-- Button -->
        <button id="essgewohnheiten"  class="dropdown" onclick="showEssgewohnheiten()">
          <a>Essgewohnheiten</a>
        </button>

        <!-- Inhalt des Dropdowns -->
        <div id="essgewohnheiten-dropdown" class="dropdown-content">
          <label class="container">
            <a>Vegetarisch</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
          <label class="container">
            <a>Vegan</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
          <label class="container">
            <a>Weitere</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
        </div>

        <!-- EINZELNE ZUTATEN -->
        <!-- Button -->
        <button id="einzelneZutaten"  class="dropdown" onclick="showZutaten()">
          <a>Einzelne Zutaten abwählen</a>
        </button>

        <!-- Inhalt des Dropdowns -->
        <div id="zutaten-dropdown" class="dropdown-content">
          <input class="search" id="zutatenSuche" type="text" placeholder="Suche.." onkeyup="suchFunktion()">
          <% for (var i = 0; i < idzutat.length-1; i++) { %>
          <label class="container">
            <a><%= bezeichnung[i]; %></a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
          <% } %>
        </div>

        <!-- Bereich der Buttons zum Speichern oder Abbrechen -->
        <div class="bestaetigungsBereich">
          <!-- Abbrechen-Button -->
          <button id="abbrechen">
            <a>Abbrechen</a>
          </button>
          <!-- Bestätigen-Button -->
          <button id="bestaetige">
            <a>Bestätigen</a>
          </button>
        </div>

      </div>

      <div id="desktop_index" class="textbox">
        <!-- Bereich der NO-GO-Buttons -->
        <!-- UNVERTRÄGLICHKEITEN -->
