          </label>
          <label class="container">
            <a>Weitere..</a>
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
        </div>
      </div>
        <!-- ESSGEWOHNHEITEN -->
        <!-- Button -->
        <div class="helpContainer">
        <button id="essgewohnheitenD"  class="dropdown" onclick="showEssgewohnheiten()">
          <a>Essgewohnheiten</a>
